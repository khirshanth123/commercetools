{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "env": ["BASE_URL","SAP_COMMERCE_*", "NEXTAUTH_*", "NEXT_*", "SITE_NAME", "CONTENTFUL_*"]
    },
    "check-types": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "sb": {
      "cache": false
    }
  }
}
